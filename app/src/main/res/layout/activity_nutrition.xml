<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/navigation_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Title Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI Meal Analysis"
                android:textSize="32sp"
                android:textColor="#1a1a1a"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get personalized feedback on your meal"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="32dp"/>

            <!-- Input Form Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="20dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meal Information"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#1a1a1a"
                    android:layout_marginBottom="24dp"/>

                <!-- Foods Consumed Input -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Foods Consumed"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/etFoodsConsumed"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="#F8F9FA"
                    android:padding="12dp"
                    android:inputType="textMultiLine"
                    android:gravity="top"
                    android:hint="e.g., 2 scrambled eggs, 2 slices white toast with butter, 3 strips bacon"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp"/>

                <!-- Meal Type Input -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meal Type"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <Spinner
                    android:id="@+id/spinnerMealType"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#F8F9FA"
                    android:padding="12dp"
                    android:layout_marginBottom="24dp"/>

                <!-- Analyze Button -->
                <Button
                    android:id="@+id/btnAnalyzeMeal"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Analyze My Meal"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/yellow"/>

                <!-- Loading Indicator -->
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"/>

            </LinearLayout>

            <!-- Results Container (Initially Hidden) -->
            <LinearLayout
                android:id="@+id/resultsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:visibility="gone">

                <!-- Meal Feedback Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:padding="20dp"
                    android:elevation="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Meal Feedback"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#1a1a1a"
                        android:layout_marginBottom="16dp"/>

                    <!-- Overall Assessment -->
                    <TextView
                        android:id="@+id/tvOverallAssessment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="16dp"/>

                    <!-- Estimated Calories -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:background="#F8F9FA">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Estimated Calories"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:textStyle="bold"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"/>

                        <TextView
                            android:id="@+id/tvEstimatedCalories"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="16sp"
                            android:textColor="#666666"
                            android:paddingEnd="12dp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"/>

                    <!-- Macro Breakdown -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Protein"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:textStyle="bold"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"/>

                        <TextView
                            android:id="@+id/tvProtein"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="16sp"
                            android:textColor="#666666"
                            android:paddingEnd="12dp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:background="#F8F9FA">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Carbs"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:textStyle="bold"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"/>

                        <TextView
                            android:id="@+id/tvCarbs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="16sp"
                            android:textColor="#666666"
                            android:paddingEnd="12dp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Fats"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:textStyle="bold"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"/>

                        <TextView
                            android:id="@+id/tvFats"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="16sp"
                            android:textColor="#666666"
                            android:paddingEnd="12dp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginBottom="16dp"/>

                    <!-- What Is Good Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="✓ What's Good"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:id="@+id/goodPointsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp"/>

                    <!-- What Is Wrong Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⚠ Areas for Improvement"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FF9800"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:id="@+id/concernsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>

                </LinearLayout>

                <!-- Improved Meal Recommendation Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:padding="20dp"
                    android:elevation="4dp"
                    android:layout_marginTop="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recommended Improved Meal"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#1a1a1a"
                        android:layout_marginBottom="16dp"/>

                    <!-- Meal Name -->
                    <TextView
                        android:id="@+id/tvMealName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/yellow"
                        android:layout_marginBottom="16dp"/>

                    <!-- Total Calories -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:background="#F8F9FA">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total Calories"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:textStyle="bold"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"/>

                        <TextView
                            android:id="@+id/tvImprovedCalories"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="16sp"
                            android:textColor="#666666"
                            android:paddingEnd="12dp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginBottom="16dp"/>

                    <!-- Foods List -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Foods to Include"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:id="@+id/foodsListContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp"/>

                    <!-- Preparation Tips -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Preparation Tips"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:id="@+id/tvPreparationTips"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="4dp"
                        android:padding="12dp"
                        android:background="#F8F9FA"
                        android:layout_marginBottom="16dp"/>

                    <!-- Key Improvements -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Key Improvements"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:id="@+id/improvementsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp"/>

                    <!-- How This Helps Your Goal -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="How This Helps Your Goal"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:id="@+id/tvHowThisHelps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="4dp"
                        android:padding="12dp"
                        android:background="#F8F9FA"/>

                </LinearLayout>

                <!-- Encouragement Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/yellow"
                    android:padding="20dp"
                    android:elevation="4dp"
                    android:layout_marginTop="24dp">

                    <TextView
                        android:id="@+id/tvEncouragement"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:lineSpacingExtra="4dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>