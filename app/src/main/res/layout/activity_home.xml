<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/navigation_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            >

            <!-- Welcome Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_back"
                android:textSize="32sp"
                android:textColor="#1a1a1a"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/currentUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="@color/yellow"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="32dp"/>

            <!-- Metrics Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="20dp"
                android:elevation="4dp">

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Body Metrics"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#1a1a1a"
                    android:layout_marginBottom="20dp"/>

                <!-- Age -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:background="#F8F9FA">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Age"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:textStyle="bold"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"/>

                    <TextView
                        android:id="@+id/age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:paddingEnd="12dp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"/>

                <!-- Gender -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Gender"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:textStyle="bold"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"/>

                    <TextView
                        android:id="@+id/gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:paddingEnd="12dp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"/>

                <!-- Height -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:background="#F8F9FA">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Height"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:textStyle="bold"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"/>

                    <TextView
                        android:id="@+id/height"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:paddingEnd="12dp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"/>

                <!-- Current Weight -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Current Weight"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:textStyle="bold"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"/>

                    <TextView
                        android:id="@+id/currentWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:paddingEnd="12dp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"/>

                <!-- Target Weight -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:background="#F8F9FA">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Target Weight"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:textStyle="bold"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"/>

                    <TextView
                        android:id="@+id/targetWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:paddingEnd="12dp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"/>

                <!-- Fitness Goal -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Fitness Goal"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:textStyle="bold"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"/>

                    <TextView
                        android:id="@+id/fitnessGoal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:paddingEnd="12dp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"/>

                <!-- Notes -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:background="#F8F9FA">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notes"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:textStyle="bold"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="8dp"/>

                    <TextView
                        android:id="@+id/notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textSize="15sp"
                        android:textColor="#666666"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:lineSpacingExtra="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:padding="20dp"
                    android:elevation="4dp"
                    android:layout_marginTop="24dp">

                    <!-- Title with Edit Icon -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/edit_profile"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#1a1a1a"
                        android:layout_marginBottom="24dp"/>

                    <!-- Age Input -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/age"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <EditText
                        android:id="@+id/etAge"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="#F8F9FA"
                        android:padding="12dp"
                        android:inputType="number"
                        android:hint="@string/hint_age"
                        android:textSize="16sp"
                        android:layout_marginBottom="16dp"/>

                    <!-- Gender Input -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gender"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <EditText
                        android:id="@+id/etGender"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="#F8F9FA"
                        android:padding="12dp"
                        android:inputType="text"
                        android:hint="@string/hint_gender"
                        android:textSize="16sp"
                        android:layout_marginBottom="16dp"/>

                    <!-- Height Input -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/height_feet"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <EditText
                        android:id="@+id/etHeight"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="#F8F9FA"
                        android:padding="12dp"
                        android:inputType="numberDecimal"
                        android:hint="@string/hint_height"
                        android:textSize="16sp"
                        android:layout_marginBottom="16dp"/>

                    <!-- Current Weight Input -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/current_weight_lbs"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <EditText
                        android:id="@+id/etCurrentWeight"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="#F8F9FA"
                        android:padding="12dp"
                        android:inputType="numberDecimal"
                        android:hint="@string/hint_current_weight"
                        android:textSize="16sp"
                        android:layout_marginBottom="16dp"/>

                    <!-- Target Weight Input -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/target_weight_lbs"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <EditText
                        android:id="@+id/etTargetWeight"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="#F8F9FA"
                        android:padding="12dp"
                        android:inputType="numberDecimal"
                        android:hint="@string/hint_target_weight"
                        android:textSize="16sp"
                        android:layout_marginBottom="16dp"/>

                    <!-- Fitness Goal Input -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fitness_goal"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <EditText
                        android:id="@+id/etFitnessGoal"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="#F8F9FA"
                        android:padding="12dp"
                        android:inputType="text"
                        android:hint="@string/hint_goal"
                        android:textSize="16sp"
                        android:layout_marginBottom="16dp"/>

                    <!-- Notes Input -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notes"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <EditText
                        android:id="@+id/etNotes"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="#F8F9FA"
                        android:padding="12dp"
                        android:inputType="textMultiLine"
                        android:gravity="top"
                        android:hint="@string/hint_notes"
                        android:textSize="16sp"
                        android:layout_marginBottom="24dp"/>

                    <!-- Save Button -->
                    <Button
                        android:id="@+id/btnSaveProfile"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="@string/save_changes"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/yellow"
                        android:onClick="profileUpdateButton"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>